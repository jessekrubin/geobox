{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "rootDir": "src",
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "declaration": true,
    "noEmit": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "scratch"]
}
