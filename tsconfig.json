{
  "extends": "@jsse/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2020", "DOM"],
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.mts"],
  "exclude": ["node_modules", "dist", "scratch", "example/**"]
}
